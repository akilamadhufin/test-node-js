<main>
    {{{body}}}

    <section id="about-us" class="section">
        <h2>About Us</h2>
        <p>
            Welcome to <strong>Let's Donate</strong> â€“ a community-driven platform built to help people give and receive essential items.
            Whether it's food, clothes, books, or daily essentials, your donations make a difference.
            Our mission is to make giving easier, faster, and more impactful. Thank you for being part of the change.
        </p>
    </section>

    <section id="all-items" class="section">
        <h2>All Donated Items</h2>
        <div class="items-grid">
            {{#each allItems}}
            <div class="item-card"
                data-title="{{this.title}}"
                data-description="{{this.description}}"
                data-category="{{this.category}}"
                data-pickup="{{this.pickupLocation}}"
                data-date="{{this.publishedDate}}"
                data-image="{{this.image}}"
                data-user="{{this.userEmail}}">

                {{#if this.image}}
                <img src="http://localhost:3000/{{this.image}}" alt="{{this.title}}" class="item-image">
                {{/if}}
                <h3>{{this.title}}</h3>
                <p><strong>Pickup:</strong> {{this.pickupLocation}}</p>
                <button class="book-btn-card">Book Item</button>
            </div>
            {{/each}}
        </div>

        <!-- Modal -->
        <div id="item-modal" class="modal hidden">
            <div class="modal-content">
                <span class="close-btn">&times;</span>
                <div class="modal-body">
                    <img id="modal-image" />
                    <div class="modal-info">
                        <h3 id="modal-title"></h3>
                        <p id="modal-description"></p>
                        <p><strong>Category:</strong> <span id="modal-category"></span></p>
                        <p><strong>Address:</strong> <span id="modal-address"></span></p>
                        <div id="map"></div>
                        <p><strong>Published:</strong> <span id="modal-date"></span></p>

                        <textarea id="message-box" placeholder="Write a message to the donor..."></textarea>
                        <button id="send-message-btn">Send Message</button>
                        <button id="book-item-btn">Book Item</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
